@model List<Ad>
@{
    ViewData["Title"] = "Anasayfa";
}
@Html.Raw(TempData["Hata"])
<h3>Son İlanlar</h3>
<hr />
@foreach (var ad in Model)
{
    <div class="container mt-4">
        <div class="border border-dark rounded p-3">
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center">
                        <img src="@ad.Image" class="rounded" style="max-width: 100%; height: auto; width:400px; height: 250px;" alt="@ad.Name">
                    </div>
                </div>
                <div class="col-md-8">
                    <h2>@ad.Name</h2>
                    <p>@ad.Detail</p>
                    <p>Fiyat: @ad.Price TL</p>
                </div>
            </div>
        </div>
    </div>
}